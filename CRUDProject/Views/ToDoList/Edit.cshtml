@model ToDoList
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Edit List";
}
<h1>To Do List (TDL)</h1>
<form method="POST" asp-controller="ToDoList" asp-action="Edit" class="container mt-4">
    <div class="mb-3">
        <label asp-for="Task" class="form-label"></label>
        <input asp-for="Task" type="text" class="form-control" />
        <span asp-validation-for="Task" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>